{
  "compilerOptions": {
    "outDir": "./build",
    "baseUrl": "./src",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true
  },
  "include": ["./src/**/*"],
  "exclude": ["/node_modules", "./src/types/**/*"]
}
